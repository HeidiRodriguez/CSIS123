#include <iostream>

using namespace std;

int main()
{
	double length;
	double width;
	double perimeter;
	double area;

	cout << endl << "Enter the length:  ";
	cin >> length;
	cout << endl << "Enter the width:  ";
	cin >> width;

	perimeter = 2 * (length + width);
	area = length * width;

	cout << endl;
	cout << "  Perimeter:  " << perimeter << endl;
	cout << "Square Area:  " << area      << endl;

	cout << endl;
	system("pause");
    return 0;
}
